<MotionScene
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	>

	<!-- expand card to full viewer -->
	<Transition
		app:constraintSetEnd="@id/cardExpanded"
		app:constraintSetStart="@id/cardCollapsed"
		app:duration="500"
		app:motionInterpolator="linear"
		app:layoutDuringTransition="honorRequest"
		>

		<OnClick
			app:clickAction="toggle"
			app:targetId="@id/viewPagerClickableDispatcher"
			/>

	</Transition>


	<!-- collapse viewpager transition -->
	<Transition
		app:constraintSetEnd="@id/collapsedPhotos"
		app:constraintSetStart="@id/cardExpanded"
		app:motionInterpolator="linear"
		>

		<OnSwipe
			app:dragDirection="dragUp"
			app:onTouchUp="autoComplete"
			app:touchAnchorId="@id/nestedScrollTouchDispatcher"
			app:moveWhenScrollAtTop="true"
			/>

		<!-- on which frame viewPagers alpha start work (overall we have 100 frames) -->
		<KeyFrameSet>
			<KeyAttribute
				android:alpha="0.1"
				app:framePosition="80"
				app:motionTarget="@id/toolbarBackground"
				/>
		</KeyFrameSet>

	</Transition>



	<ConstraintSet android:id="@+id/cardCollapsed">

		<!-- click dispatcher for viewpager2 -->
		<Constraint
			android:id="@+id/viewPagerClickableDispatcher"
			android:layout_width="0dp"
			android:layout_height="0dp"

			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="@id/viewPagerCardPhotoList"
			app:layout_constraintEnd_toEndOf="@id/viewPagerCardPhotoList"
			app:layout_constraintStart_toStartOf="@id/viewPagerCardPhotoList"
			/>

		<!-- viewpager2 with user photos -->
		<Constraint
			android:id="@+id/viewPagerCardPhotoList"
			android:layout_width="0dp"
			android:layout_height="0dp"

			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<!-- card name title -->
		<Constraint
			android:id="@+id/tvCardUserName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/general_size_16dp"
			android:layout_marginBottom="@dimen/general_size_16dp"

			app:layout_constraintStart_toStartOf="@id/viewPagerCardPhotoList"
			app:layout_constraintBottom_toBottomOf="@id/viewPagerCardPhotoList"
			/>


	</ConstraintSet>




	<ConstraintSet android:id="@+id/cardExpanded">

		<!-- viewpager2 with user photos -->
		<Constraint
			android:id="@+id/viewPagerCardPhotoList"
			android:layout_width="0dp"
			android:layout_height="@dimen/collapseBarHeight"

			android:alpha="1"

			app:layout_constraintBottom_toTopOf="@id/containerNestedScroll"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<!-- card name title -->
		<Constraint
			android:id="@+id/tvCardUserName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/general_size_16dp"

			app:layout_constraintTop_toTopOf="@id/toolbarBackground"
			app:layout_constraintStart_toStartOf="@id/toolbarBackground"
			app:layout_constraintBottom_toBottomOf="@id/toolbarBackground"
			/>

		<Constraint
			android:id="@+id/containerNestedScroll"
			android:layout_width="0dp"
			android:layout_height="wrap_content"

			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/viewPagerCardPhotoList"
			/>

		<Constraint
			android:id="@+id/nestedScrollTouchDispatcher"
			android:layout_width="0dp"
			android:layout_height="0dp"

			app:layout_constraintBottom_toBottomOf="@id/containerNestedScroll"
			app:layout_constraintEnd_toEndOf="@id/containerNestedScroll"
			app:layout_constraintStart_toStartOf="@id/containerNestedScroll"
			app:layout_constraintTop_toTopOf="@id/containerNestedScroll" />

	</ConstraintSet>

	<ConstraintSet android:id="@+id/collapsedPhotos">

		<!-- viewpager2 with user photos -->
		<Constraint
			android:id="@+id/viewPagerCardPhotoList"
			android:layout_width="0dp"
			android:layout_height="?attr/actionBarSize"

			android:alpha="0"

			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<!-- "toolbar" background -->
		<Constraint
			android:id="@+id/toolbarBackground"
			android:layout_width="0dp"
			android:layout_height="?attr/actionBarSize"

			android:alpha="1"

			app:layout_constraintStart_toStartOf="@id/viewPagerCardPhotoList"
			app:layout_constraintEnd_toEndOf="@id/viewPagerCardPhotoList"
			app:layout_constraintBottom_toBottomOf="@id/viewPagerCardPhotoList"
			app:layout_constraintTop_toTopOf="@id/viewPagerCardPhotoList"
			/>

		<!-- card name title -->
		<Constraint
			android:id="@+id/tvCardUserName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleX="0.7"
			android:scaleY="0.7"

			app:layout_constraintTop_toTopOf="@id/toolbarBackground"
			app:layout_constraintStart_toStartOf="@id/toolbarBackground"
			app:layout_constraintEnd_toEndOf="@id/toolbarBackground"
			app:layout_constraintBottom_toBottomOf="@id/toolbarBackground"
			/>

	</ConstraintSet>

</MotionScene>