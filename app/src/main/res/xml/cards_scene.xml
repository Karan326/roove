<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<Transition
		app:constraintSetEnd="@+id/pass"
		app:constraintSetStart="@+id/rest"
		app:duration="500">

		<OnSwipe
			app:dragDirection="dragLeft"
			app:onTouchUp="autoCompleteToStart"
			app:touchAnchorId="@id/topCard"
			app:touchAnchorSide="left"
			app:touchRegionId="@id/topCard" />

		<KeyFrameSet>

			<KeyPosition
				app:drawPath="path"
				app:framePosition="50"
				app:keyPositionType="pathRelative"
				app:motionTarget="@id/topCard"
				app:percentX="0.5"
				app:percentY="0.1" />

			<KeyPosition
				app:drawPath="path"
				app:framePosition="50"
				app:keyPositionType="pathRelative"
				app:motionTarget="@id/left_overlay"
				app:percentX="0.5"
				app:percentY="0.1" />

		</KeyFrameSet>

	</Transition>

	<Transition
		app:constraintSetEnd="@+id/like"
		app:constraintSetStart="@+id/rest"
		app:duration="500">

		<OnSwipe
			app:dragDirection="dragRight"
			app:onTouchUp="autoCompleteToStart"
			app:touchAnchorId="@id/topCard"
			app:touchAnchorSide="right"
			app:touchRegionId="@id/topCard" />

		<KeyFrameSet>

			<KeyPosition
				app:drawPath="path"
				app:framePosition="50"
				app:keyPositionType="pathRelative"
				app:motionTarget="@id/topCard"
				app:percentX="0.5"
				app:percentY="-0.1" />

			<KeyPosition
				app:drawPath="path"
				app:framePosition="50"
				app:keyPositionType="pathRelative"
				app:motionTarget="@id/right_overlay"
				app:percentX="0.5"
				app:percentY="-0.1" />

		</KeyFrameSet>

	</Transition>

	<Transition
		app:autoTransition="animateToEnd"
		app:constraintSetEnd="@+id/offScreenLike"
		app:constraintSetStart="@+id/like"
		app:duration="300">

	</Transition>

	<Transition
		app:autoTransition="animateToEnd"
		app:constraintSetEnd="@+id/offScreenPass"
		app:constraintSetStart="@+id/pass"
		app:duration="300">

	</Transition>

	<ConstraintSet android:id="@id/rest">

		<Constraint android:id="@id/topCard"
			android:layout_height="0dp"
			android:layout_width="0dp"
			android:layout_marginStart="@dimen/general_size_16dp"
			android:layout_marginTop="@dimen/general_size_16dp"
			android:layout_marginEnd="@dimen/general_size_16dp"
			android:layout_marginBottom="@dimen/general_size_16dp"


			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>


		<Constraint android:id="@id/bottomCard"
			android:layout_height="0dp"
			android:layout_width="0dp"
			android:layout_marginStart="@dimen/general_size_16dp"
			android:layout_marginTop="@dimen/general_size_16dp"
			android:layout_marginEnd="@dimen/general_size_16dp"
			android:layout_marginBottom="@dimen/general_size_16dp"

			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			>

			<Transform
				android:scaleX="0.90"
				android:scaleY="0.90" />

		</Constraint>

		<!-- skip overlay -->
		<Constraint
			android:id="@+id/left_overlay"
			android:layout_width="0dp"
			android:layout_height="0dp"

			android:alpha="0"

			app:layout_constraintTop_toTopOf="@id/topCard"
			app:layout_constraintBottom_toBottomOf="@id/topCard"
			app:layout_constraintEnd_toEndOf="@id/topCard"
			app:layout_constraintStart_toStartOf="@id/topCard"
			/>

		<!-- like overlay -->
		<Constraint
			android:id="@+id/right_overlay"
			android:layout_width="0dp"
			android:layout_height="0dp"

			android:alpha="0"

			app:layout_constraintTop_toTopOf="@id/topCard"
			app:layout_constraintBottom_toBottomOf="@id/topCard"
			app:layout_constraintEnd_toEndOf="@id/topCard"
			app:layout_constraintStart_toStartOf="@id/topCard"
			/>

	</ConstraintSet>

	<ConstraintSet android:id="@+id/pass"
		app:deriveConstraintsFrom="@+id/rest">

		<Constraint android:id="@id/topCard"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="50dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="200dp"
			android:layout_marginBottom="80dp"

			android:alpha="0.8"

			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"

			app:layout_constraintWidth_percent="0.7"/>

		<Constraint android:id="@id/bottomCard">
			<Transform
				android:scaleX="0.95"
				android:scaleY="0.95" />

		</Constraint>

		<!-- skip overlay -->
		<Constraint
			android:id="@+id/left_overlay"
			android:layout_width="0dp"
			android:layout_height="0dp"

			android:alpha="1"

			app:layout_constraintTop_toTopOf="@id/topCard"
			app:layout_constraintBottom_toBottomOf="@id/topCard"
			app:layout_constraintEnd_toEndOf="@id/topCard"
			app:layout_constraintStart_toStartOf="@id/topCard"
			/>

	</ConstraintSet>

	<ConstraintSet android:id="@+id/offScreenPass"
		app:deriveConstraintsFrom="@id/pass">

		<Constraint
			android:id="@id/topCard"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="50dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="500dp"
			android:layout_marginBottom="80dp"

			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintWidth_percent="0.7">

		</Constraint>

		<Constraint android:id="@id/bottomCard">
			<Transform
				android:scaleX="1"
				android:scaleY="1" />

		</Constraint>


	</ConstraintSet>

	<ConstraintSet android:id="@+id/like"
		app:deriveConstraintsFrom="@id/rest">

		<Constraint
			android:id="@id/topCard"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="200dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="50dp"
			android:layout_marginBottom="80dp"

			android:alpha="0.8"

			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintWidth_percent="0.7" />

		<Constraint android:id="@id/bottomCard">
			<Transform
				android:scaleX="0.95"
				android:scaleY="0.95" />

		</Constraint>

		<!-- like overlay -->
		<Constraint
			android:id="@+id/right_overlay"
			android:layout_width="0dp"
			android:layout_height="0dp"

			android:alpha="1"

			app:layout_constraintTop_toTopOf="@id/topCard"
			app:layout_constraintBottom_toBottomOf="@id/topCard"
			app:layout_constraintEnd_toEndOf="@id/topCard"
			app:layout_constraintStart_toStartOf="@id/topCard"
			/>

	</ConstraintSet>

	<ConstraintSet android:id="@+id/offScreenLike"
		app:deriveConstraintsFrom="@id/like">

		<Constraint
			android:id="@id/topCard"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="50dp"
			android:layout_marginBottom="80dp"

			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="parent"
			app:layout_constraintWidth_percent="0.7" />

		<Constraint android:id="@id/bottomCard">

			<Transform
				android:scaleX="1"
				android:scaleY="1" />

		</Constraint>

	</ConstraintSet>

</MotionScene>